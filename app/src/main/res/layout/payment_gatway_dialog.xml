<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:id="@+id/pmntGateway_dialog_layout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"

        android:background="@drawable/top_radius_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_18"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.FontPath"
                style="@style/TextAppearance.AppCompat.Large"
                android:text="Payment Gateway Type"
                android:textColor="@color/black"
                />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:id="@+id/layout_stripepay"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/height_20"
                android:layout_marginRight="@dimen/height_20"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_height="@dimen/height_40"
                android:layout_centerInParent="true">


                <TextView
                    android:id="@+id/stripe_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_18"
                    android:layout_centerVertical="true"
                    android:text="Stripe Pay"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_centerInParent="true"
                android:id="@+id/layuot_razorpay"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/height_20"
                android:layout_marginRight="@dimen/height_20"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_height="@dimen/height_40">


                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/razorpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_18"
                    android:layout_centerVertical="true"
                    android:text="RazorPay"
                    android:textColor="@color/black" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>