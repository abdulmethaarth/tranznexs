<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context="co.webnexs.tranznexs.activity.Payments">



    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50">

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/height_20"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="@dimen/height_20"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRIP FARE"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/tips_img"/>


                <TextView
                    android:id="@+id/fare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0.0"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/height_50"
                    android:layout_marginBottom="@dimen/margin_5"
                    />


            <RelativeLayout
                android:layout_margin="@dimen/margin_10"
                android:id="@+id/addCardLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/rounded_border">

                <TextView
                    android:id="@+id/add_card_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Online Payment/Card"
                    android:textSize="@dimen/font_15"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_margin="@dimen/margin_10"
                android:id="@+id/cash_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/rounded_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="@string/cash"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_15"/>
            </RelativeLayout>

        </LinearLayout>

</LinearLayout>
