<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/arrived_homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/camera_dialog_border"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/height_40">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/heading_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_18"
                android:text="Driver Arrived"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_15"
                android:textColor="@color/black"/>


        </RelativeLayout>

        <ImageView
            android:id="@+id/ex_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_200"
            android:layout_gravity="center"
            android:src="@drawable/rental_image"/>

        <TextView
            android:id="@+id/adition_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:textColor="@color/dark_gray"
            android:text=""/>

        <Button
            android:background="@drawable/rounded_border"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/done"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/height_20"
            android:layout_marginRight="@dimen/height_20"
            android:layout_margin="@dimen/margin_10"
            android:text="DONE"/>




    </LinearLayout>

</RelativeLayout>